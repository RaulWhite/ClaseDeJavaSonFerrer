package parte3;

import java.awt.*;
import java.awt.event.*;
import javax.swing.*;

/**
 * @author Ra√∫l Blanco Rama
 */

public class StarTV extends JFrame implements KeyListener {

	public static void main(String[] args) {
		
		new StarTV();
		
	}
	
	JLabel lblMovil;
	
	public StarTV() {
		
		super("StarTV");
		setSize(300, 200);
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		setLayout(null);
		
		ImageIcon imgMovil = new ImageIcon("icons/67.png");
		lblMovil = new JLabel(imgMovil);
		lblMovil.setBounds(50, 50, 24, 24);
		
		add(lblMovil);
		
		setVisible(true);
		
	}

	@Override
	public void keyPressed(KeyEvent e) {
		char pulsado = (char)e.getKeyChar();
		
		switch (pulsado) {
		case 'w':
			
			break;
		}
		case 's':
			
			break;
		case 'a';
			
			break;
		case 'd':
			
			break;
	}

	@Override
	public void keyReleased(KeyEvent e) {
		
	}

	@Override
	public void keyTyped(KeyEvent e) {
		
	}
	
}
