import java.io.*;

/**
 * @author Ra√∫l Blanco Rama
 */

public class Junio2 {

	public static void main(String[] args) {
		
		leerArchivo("mensaje.txt");
		
		System.out.println();
		
		contarPalabras("mensaje.txt", "hola");
		
	}
	
	public static void leerArchivo (String nombreArchivo){
		
		try {
			
			FileReader archivo = new FileReader(nombreArchivo);
			BufferedReader buffer = new BufferedReader(archivo);
			
			boolean eof = false;
			String linea = "";
			
			while (!eof){
				
				linea = buffer.readLine();
				
				if (linea == null)
					eof = true;
				else
					System.out.println(linea.toUpperCase());
				
			}
			
		} catch (IOException ioe) {
			ioe.printStackTrace();
		}
		
	}
	
	public static void contarPalabras (String nombreArchivo, String palabra){
		
		try {
			
			FileReader archivo = new FileReader(nombreArchivo);
			BufferedReader buffer = new BufferedReader(archivo);
			
			boolean eof = false;
			int contador = 0;
			String linea = "";
			
			while (!eof){
				
				linea = buffer.readLine();
				
				if (linea == null)
					eof = true;
				else if (linea.contains(palabra))
					contador++;
				
			}
			
			System.out.println(contador);
			
		} catch (IOException ioe) {
			ioe.printStackTrace();
		}
		
	}
	
}
