package instituto;

/**
 * @author Raúl Blanco Rama
 */
import auxiliar.Alumno;

public class Instituto {

	// Atributos
	private final int MAX_ALUMNOS = 600;
	private Alumno alumnos[] = new Alumno[MAX_ALUMNOS];
	
	// Métodos
	public static void addAlumno(Alumno alu){
		for (int i = 0; i < alumnos.length; i++){
			if (alumnos[i] == null){
				alumnos[i] = alu;
				break;
			}
		}	
	}
	
	public static void delAlumno(String num){
		for (int i = 0; i < alumnos.length; i++){
			if (alumnos[i].getNumExpediente().equals(num)){
				alumnos[i] = null;
				break;
			}
		}
	}
	
	public void muestraAlumnos(){
		
	}
	
	public void numAlumnos(){
		
	}
	
	public void buscaAlumno(int numExp){
		String resultadoBusqueda;
		for (int i = 0; i < alumnos.length; i++){
			if (alumnos[i].getNumExpediente().equals(numExp)){
				resultadoBusqueda = "Alumno encontrado.\n"
						+ alumnos[i].toString();
				break;
			} else if (i == (alumnos.length - 1)){
				resultadoBusqueda = "Alumno no encontrado.";
			}
		}
		System.out.println(resultadoBusqueda);
	}
	
}
