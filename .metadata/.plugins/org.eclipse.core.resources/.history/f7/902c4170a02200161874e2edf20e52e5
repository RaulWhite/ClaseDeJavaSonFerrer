package actividades4;

import java.awt.*;
import java.awt.event.*;
import javax.swing.*;

/**
 * @author Ra√∫l Blanco Rama
 */

public class Act4_4 extends JFrame {

	public static void main(String[] args) {
		
		new Act4_4();
		
	}
	
	JSlider sldR;
	JSlider sldG;
	JSlider sldB;
	
	JPanel pnlMuestra;
	
	JTextField txtHex;
	
	public Act4_4() {
		
		super("Paleta");
		setSize(200, 400);
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		setLayout(new FlowLayout());
		
		JLabel lblRojo = new JLabel("Rojo");
		JLabel lblVerde = new JLabel("Verde");
		JLabel lblAzul = new JLabel("Azul");
		
		sldR = new JSlider(0, 255, 255);
		sldG = new JSlider(0, 255, 200);
		sldB = new JSlider(0, 255, 51);
		
		sldR.setMajorTickSpacing(50);
		sldR.setMinorTickSpacing(25);
		sldR.setPaintLabels(true);
		sldR.setPaintTicks(true);
		
		sldR.setMajorTickSpacing(50);
		sldR.setMinorTickSpacing(25);
		sldR.setPaintLabels(true);
		sldR.setPaintTicks(true);
		
		sldR.setMajorTickSpacing(50);
		sldR.setMinorTickSpacing(25);
		sldR.setPaintLabels(true);
		sldR.setPaintTicks(true);
		
		pnlMuestra = new JPanel();
		pnlMuestra.setSize(75, 20);
		pnlMuestra.setBackground(new Color(255, 200, 51));
		
		txtHex = new JTextField("#FFC833", 7);
		txtHex.setEditable(false);
		
		add(lblRojo);
		add(sldR);
		
		add(lblVerde);
		add(sldG);
		
		add(lblAzul);
		add(sldB);
		
		add(pnlMuestra);
		add(txtHex);
		
		setVisible(true);
		
	}
	
}
