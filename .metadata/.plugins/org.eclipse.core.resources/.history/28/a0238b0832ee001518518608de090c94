 */
public class Ejercicio1 {

	public static void main(String[] args) {
		
		System.out.println(transforma(100));
		
	}
	
	public static String transforma(int dato){
		String binario = "";
		if (dato > 1){
			binario = binario + "" + (dato%2);
			return transforma(dato/2) + binario;
		} else {
			return dato + "" + binario;
		}
	}
	
}
