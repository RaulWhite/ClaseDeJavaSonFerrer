package actividades2;

import java.awt.*;
import java.awt.event.*;
import javax.swing.*;

/**
 * @author Ra√∫l Blanco Rama
 */

public class Act2_2 extends JFrame {

	public static void main(String[] args) {
		
		new Act2_2();
		
	}
	
	public Act2_2() {
		
		super("Termostato");
		setSize(350,350);
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		
		JSlider sldTemp = new JSlider(0, 25, 17);
		sldTemp.setMajorTickSpacing(20);
		sldTemp.setMinorTickSpacing(5);
		sldTemp.setPaintLabels(true);
		sldTemp.setPaintTicks(true);
		sldTemp.setPaintTrack(true);
		
		add(sldTemp);
		
		setVisible(true);
		
	}
	
}
