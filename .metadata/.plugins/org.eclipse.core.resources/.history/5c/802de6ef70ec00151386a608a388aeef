/**
 * @author Raúl Blanco Rama
 */
public class busquedaBinariaRecursiva {

	public static void main(String[] args) {
		
		
		
	}
	

	public static int busquedaBinaria(int[] lista, int x, int i, int f){
		int m = (i + f) / 2;
		
		if (lista[m] == x) {
			return m; // El número está en la posición m.
		} else if (lista[m] > x) {
			f = m - 1;
		} else {
			i = m + 1;
		}
		
		busquedaBinaria(lista, x, i, f);
	}
	
	
}
