/**
 * @author Raúl Blanco Rama
 */
package conversion;

public class Conversor {

	// Atributos
	static private final double KM_A_MILLAS = 0.621371;
	static private final double MB_A_ATM = 0.000986923;
	static private final double CAL_A_JULIOS = 4184;
	
	// Constructores
	public Conversor(){
		
	};
	
	// Métodos
	static public double millas(double km){
		return (km * KM_A_MILLAS);
	}
	
	static public double km(double millas){
		return(millas / KM_A_MILLAS);
	}
	
	static public double atmosferas(double milibares){
		return(milibares * MB_A_ATM);
	}
	
	static public double milibares(double atmosferas){
		return(atmosferas / MB_A_ATM);
	}
	
	static public double julios(double calorias){
		return(calorias * CAL_A_JULIOS);
	}
	
	static public double calorias(double julios){
		return(julios / CAL_A_JULIOS);
	}
	
}
