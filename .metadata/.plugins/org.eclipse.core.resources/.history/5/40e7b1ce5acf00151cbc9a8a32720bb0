package Leccion1;
/**
 * @author Raúl Blanco Rama
 */
public class Principal {

	public static void main(String[] args) {
		
		Persona p;  // Declarar una variable de tiopo Persona
		p = new Persona();  // Crear un objeto Persona y asignarlo a p.
		// Es lo mismo que 'Persona p = new Persona()'
		
		p.dni = "12345678A";
		p.nombre = "Pepe";
		p.apellidos = "Martínez Ruiz";
		p.peso = 70;
		p.edad = 25;
		
		Persona cliente = new Persona();
		cliente.dni = "87654321Z";
		cliente.nombre = "Pablo";
		cliente.apellidos = "Menéndez Pérez";
		cliente.peso = 90;
		cliente.edad = 70;
		
		p.mostrar();
		System.out.println();
		cliente.mostrar();
		System.out.println();
		
		p.hola();
		System.out.println();
		cliente.hola();
		System.out.println();
		
		p.cumplirAnyos();
		System.out.println();
		cliente.cumplirAnyos();
		System.out.println();
		
		p.mostrar();
		
		
	}
	
}
