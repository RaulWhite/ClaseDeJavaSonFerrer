package instituto;

/**
 * @author Raúl Blanco Rama
 */
import auxiliar.Alumno;

public class Instituto {

	// Atributos
	private final int MAX_ALUMNOS = 600;
	private Alumno alumnos[] = new Alumno[MAX_ALUMNOS];
	
	// Métodos
	public void addAlumno(Alumno alu){
		for (int i = 0; i < alumnos.length; i++){
			if (alumnos[i] == null){
				alumnos[i] = alu;
				break;
			}
		}	
	}
	
	public void delAlumno(String num){
		for (int i = 0; i < alumnos.length; i++){
			if (alumnos[i].getNumExpediente().equals(num)){
				alumnos[i] = null;
				break;
			}
		}
	}
	
	public void muestraAlumnos(){
		for (int i = 0; i < alumnos.length; i++){
			System.out.println(i + ". " + alumnos[i].toString());
		}
	}
	
	public void numAlumnos(){
		int total = 0;
		for (int i = 0; i < alumnos.length; i++){
			if (alumnos[i] != null){
				total++;
			}
		}
		System.out.println("Hay " + total + " alumnos en este instituto.");
	}
	
	public void buscaAlumno(int numExp){
		String resultadoBusqueda = "Alumno no encontrado.";
		for (int i = 0; i < alumnos.length; i++){
			if (Integer.parseInt(alumnos[i].getNumExpediente().equals(numExp))){
				resultadoBusqueda = "Alumno encontrado.\n"
						+ alumnos[i].toString();
				break;
			}
		}
		System.out.println(resultadoBusqueda);
	}
	
}
