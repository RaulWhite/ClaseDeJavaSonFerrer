package parte3;

import java.awt.*;
import java.awt.event.*;
import javax.swing.*;

/**
 * @author Raúl Blanco Rama
 */

public class FocoBotones extends JFrame implements FocusListener {

	public static void main(String[] args) {
		
		new FocoBotones();
		
	}
	
	JButton btn1 = new JButton("Botón 1");
	JButton btn2 = new JButton("Botón 2");
	
	public FocoBotones() {
		
		super("Prueba foco con botones");
		setSize(200,80);
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		setLayout(new FlowLayout());
		
		btn1 = new JButton("Botón 1");
		btn2 = new JButton("Botón 2");
		
		setVisible(true);
		
	}
	
}
