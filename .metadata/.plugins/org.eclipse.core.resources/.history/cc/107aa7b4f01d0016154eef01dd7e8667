package parte3;

import java.awt.*;
import java.awt.event.*;
import javax.swing.*;

/**
 * @author Ra√∫l Blanco Rama
 */

public class EjemploKeyListener extends JFrame {

	public static void main(String[] args) {
		
		new EjemploKeyListener();
		
	}
	
	JLabel lblTeclaPulsada;
	
	public EjemploKeyListener() {
		
		super("Ejemplo con Key Listener");
		setSize(500, 400);
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		setLayout(new FlowLayout());
		
		lblTeclaPulsada = new JLabel("Pulsa una tecla");
		
		
		
		add(lblTeclaPulsada);
		
		setVisible(true);
		
	}
	
}
