/**
 * @author RaÃºl Blanco Rama
 */
public class busquedaBinariaRecursiva {

	public static void main(String[] args) {
		
		int numeros[] = {2, 12, 14, 20, 21, 22};
		
		busquedaBinaria(numeros, 12, 0, (numeros.length - 1))
		
	}
	

	public static int busquedaBinaria(int[] lista, int x, int i, int f){
		int m = (i + f) / 2;
		
		if (lista[m] == x) {
			return m;
		} else if (lista[m] > x) {
			f = m - 1;
		} else {
			i = m + 1;
		}
		
		busquedaBinaria(lista, x, i, f);
	}
	
	
}
