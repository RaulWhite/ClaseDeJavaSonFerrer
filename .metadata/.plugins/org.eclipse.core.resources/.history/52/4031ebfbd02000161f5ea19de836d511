package actividades3;

import java.awt.*;
import java.awt.event.*;
import javax.swing.*;

/**
 * @author Raúl Blanco Rama
 */

public class Act3_3 extends JFrame {

	public static void main(String[] args) {
		
		new Act3_3();
		
	}
	
	public Act3_3() {
		
		super("Parámetros críticos");
		setSize(300, 100);
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		setLayout(new FlowLayout(FlowLayout.LEFT));
		
		JProgressBar prgCombustible = new JProgressBar(0, 50);
		prgCombustible.setValue(24);
		prgCombustible.setStringPainted(true);
		prgCombustible.setForeground(new Color(0, 180, 0));
		
		add(prgCombustible);
		
		setVisible(true);
		
	}
	
}
