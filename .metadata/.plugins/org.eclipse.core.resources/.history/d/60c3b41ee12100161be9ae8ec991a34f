package actividades4;

import java.awt.*;
import java.awt.event.*;
import javax.swing.*;

/**
 * @author Raúl Blanco Rama
 */

public class Act4_2 extends JFrame implements ItemListener {

	public static void main(String[] args) {
		
		new Act4_2();
		
	}
	
	JLabel lblCurso;
	String[] cursos = { "Selecciona un curso", "1º ESO", "2º ESO", "3º ESO", "4º ESO" };
	JComboBox cmbCurso;
	
	public Act4_2() {
		
		super("Matrícula");
		setSize(250, 200);
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		setLayout(new FlowLayout(FlowLayout.LEFT));
		
		JLabel lblApellidos = new JLabel("Apellidos");
		JLabel lblNombre = new JLabel("Nombre");
		JLabel lblCurso = new JLabel("Curso");
		
		JTextField txtApellidos = new JTextField(20);
		JTextField txtNombre = new JTextField(20);
		
		cmbCurso = new JComboBox<>(cursos);
		
		lblCurso = new JLabel();
		
		cmbCurso.addItemListener(this);
		
		add(lblApellidos);
		add(txtApellidos);
		
		add(lblNombre);
		add(txtNombre);
		
		add(lblCurso);
		add(cmbCurso);
		
		add(lblCurso);
		
		setVisible(true);
		
	}

	@Override
	public void itemStateChanged(ItemEvent e) {
		System.out.println();
	}
	
}
