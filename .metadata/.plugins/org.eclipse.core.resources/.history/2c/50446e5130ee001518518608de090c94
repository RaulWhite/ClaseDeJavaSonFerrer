 */
public class Ejercicio3 {

	public static void main(String[] args) {
		
		System.out.println(transforma(110));
		
	}
	
	public static String transforma(int dato){
		String hexa = "";
		if (dato > 15 && (dato%16 < 10)){
			hexa = hexa + "" + (dato%16);
			return hexa + transforma(dato/16);
		} else if (dato > 15 && (dato%16 >= 10)){
			hexa = hexa + "" + (dato%16);
			return hexa + transforma(dato/16);
			switch (dato%16){
				case 10:
					hexa = hexa + "A";
					break;
				case 11:
					hexa = hexa + "B";
					break;
				case 12:
					hexa = hexa + "C";
					break;
				case 13:
					hexa = hexa + "D";
					break;
				case 14:
					hexa = hexa + "E";
					break;
				case 15:
					hexa = hexa + "F";
					break;
			}
			return hexa + transforma(dato/16);
			} else {
			if (dato%16 < 10){
				System.out.print(dato%16);
			} else {
				switch (dato%16){
					case 10:
						System.out.print("A");
						break;
					case 11:
						System.out.print("B");
						break;
					case 12:
						System.out.print("C");
						break;
					case 13:
						System.out.print("D");
						break;
					case 14:
						System.out.print("E");
						break;
					case 15:
						System.out.print("F");
						break;
				}
			}
			return;
		}
	}
	
}
