package parte1;

import java.awt.*;
import java.awt.event.*;
import javax.swing.*;

/**
 * @author Ra√∫l Blanco Rama
 */

public class BarrasDeProgreso extends JFrame {

	public static void main(String[] args) {
		
		new BarrasDeProgreso();
		
	}
	
	public BarrasDeProgreso(){
		
		super("Barra de progreso");
		setSize(250, 100);
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		setLayout(new FlowLayout());
		
		JProgressBar prgComlbustible = new JProgressBar(0, 1000);
		prgComlbustible.setValue(200);
		prgComlbustible.setStringPainted(true);
		
		add(prgComlbustible);
		
		setVisible(true);
		
	}
	
}
