package Leccion3;

/**
 * @author Raúl Blanco Rama
 */

public class Circumferencia {

	//Atributos: x, y, radio
	int x;
	int y;
	double radio;
	
	//Constructores
	Circumferencia(){
		
	}
	
	Circumferencia(int x, int y, double radio){
		this.x = x;
		this.y = y;
		this.radio = radio;
	}
	
	//Métodos: perímetro(), área(), mostrar()
	double perimetro(){
		return(Math.PI*2*radio);
	}
	
	double area(){
		return(Math.PI*Math.pow(radio, 2));
	}
	
	void mostrar(){
		System.out.println("Posición: " + x + "px , " + y + "px.");
		System.out.println("Radio: " + radio + "cm.");
	}
	
}
