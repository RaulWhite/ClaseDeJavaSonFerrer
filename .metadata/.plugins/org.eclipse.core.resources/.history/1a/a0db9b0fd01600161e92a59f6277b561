package parte1;

import java.awt.*;
import java.awt.event.*;
import javax.swing.*;

/**
 * @author Raúl Blanco Rama
 */

public class ListaConBarras extends JFrame {

	public static void main(String[] args) {
		
		new ListaConBarras();
		
	}
	
	public ListaConBarras() {
	
		super("Lista con barras");
		setSize(300, 200);
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setLayout(new FlowLayout());
		
		String categorias[] = { "1o de ESO", "2o de ESO", "3o de ESO",
		"4o de ESO", "1o de Bachillerato", "2o de Bachillerato",
		"CFGM de Informática", "CFGS de Informática",
		"FP básica de Informática" };
		
		JList lista = new JList(categorias);
		
		JScrollPane panelScroll = new JScrollPane(lista);
		
		add(panelScroll);
		setVisible(true);
		
	}
	
}
