package Leccion6;

/**
 * @author Raúl Blanco Rama
 */

public class CuentaBancaria {

	// Atributos: saldo
	
	private double saldo;
	
	// Métodos
	// - Constructor (tomando como parámetro el saldo)
	
	CuentaBancaria(){
		
	}
	
	CuentaBancaria(double saldo){
		this.saldo = saldo;
	}
	
	// - Depositar (toma una cantidad y la suma al saldo)
	
	void depositar (double deposito){
		saldo = deposito + saldo;
		System.out.println("Se han deposito " + deposito + " euros.");
		System.out.println("El saldo de la cuenta ahora es de " + saldo + " euros.");
	}
	
	// - Boolean retirar (si se puede sacar esa cantidad)
	
	void puedeRetirar(double retiro){
		if (saldo < retiro){
			return false;
		} else {
			return true;
		}
	}
	
	// - Retirar (lo contrario a depositar)
	
	void retirar(double retiro){
		
	}
	
	// - Métodos de acceso para el saldo
	
	
}
